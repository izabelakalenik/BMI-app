<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ResultActivity">

    <TextView
        android:id="@+id/labelBMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/bmi_label"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />


    <TextView
        android:id="@+id/resultBMI2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/bmi_result"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="@+id/labelBMI"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="@+id/labelBMI"
        app:layout_constraintTop_toBottomOf="@+id/labelBMI"
        tools:text="155" />

    <TextView
        android:id="@+id/resultInfoBMI"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/bmi_result_text"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultBMI2"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Result text" />

    <TextView
        android:id="@+id/descriptionBMI"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:text="@string/bmi_description"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/resultInfoBMI"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/resultInfoBMI"
        app:layout_constraintTop_toBottomOf="@+id/resultInfoBMI"
        app:layout_constraintVertical_bias="0.143"
        tools:text="Description" />


</androidx.constraintlayout.widget.ConstraintLayout>